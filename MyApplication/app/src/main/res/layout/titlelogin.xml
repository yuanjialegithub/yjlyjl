<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/bt_1_login"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/bg_btn3"
            android:drawableTop="@drawable/ic_jishi"
            android:text="计时"
            android:textColor="@color/colorBlack">
        </Button>
        <Button
            android:id="@+id/bt_2_login"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_daiban"
            android:text="待办"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_btn3"
            android:layout_toLeftOf="@id/bt_1_login"
            android:textColor="@color/colorBlack">
        </Button>
        <Button
            android:id="@+id/bt_3_login"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:text="打卡"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_btn3"
            android:drawableTop="@drawable/ic_daka"
            android:layout_toLeftOf="@id/bt_2_login"
            android:textColor="@color/colorBlack">
        </Button>
        <Button
            android:id="@+id/bt_4_login"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="我的"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_btn3"
            android:drawableTop="@drawable/ic_wode"
            android:layout_toLeftOf="@id/bt_3_login"
            android:textColor="@color/colorBlack">
        </Button>
    </LinearLayout>
</RelativeLayout>