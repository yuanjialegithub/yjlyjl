<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DakaActivity"
    android:orientation="vertical">

    <include layout="@layout/title"></include>

    <EditText
        android:id="@+id/edittext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:focusableInTouchMode="true"/>

    <TextView
        android:id="@+id/show_text"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:gravity="center"
        android:hint="点击编辑打卡事项"
        android:layout_margin="5dp"
        android:background="@color/colordaka"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/show_text">

        <Button
            android:id="@+id/bt_true"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/edittext"
            android:text="确定"
            android:layout_margin="5dp"
            android:background="@drawable/bg_btn4"/>

        <Button
            android:id="@+id/bt_cal"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="日历"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/bt_true"
            android:background="@drawable/bg_btn4"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/edittext"/>

    <TextView
        android:id="@+id/show_text2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:gravity="center"
        android:hint="点击编辑打卡事项"
        android:layout_margin="5dp"
        android:background="@color/colordaka"
        android:layout_below="@+id/edittext"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_true"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/show_text2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_true2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/show_text2"
            android:background="@drawable/bg_btn4"
            android:text="确定"></Button>

        <Button
            android:id="@+id/bt_cal2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/bt_true2"
            android:background="@drawable/bg_btn4"
            android:text="日历" />
    </LinearLayout>

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/edittext2"/>

    <TextView
        android:id="@+id/show_text3"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:gravity="center"
        android:hint="点击编辑打卡事项"
        android:layout_margin="5dp"
        android:background="@color/colordaka"
        android:layout_below="@+id/edittext2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_true2"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/show_text3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_true3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/show_text3"
            android:background="@drawable/bg_btn4"
            android:text="确定"></Button>

        <Button
            android:id="@+id/bt_cal3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/bt_true3"
            android:background="@drawable/bg_btn4"
            android:text="日历" />
    </LinearLayout>

    <EditText
        android:id="@+id/edittext4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/edittext3"/>

    <TextView
        android:id="@+id/show_text4"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:gravity="center"
        android:hint="点击编辑打卡事项"
        android:layout_margin="5dp"
        android:background="@color/colordaka"
        android:layout_below="@+id/edittext3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_true2"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@+id/show_text3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_true4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/show_text4"
            android:background="@drawable/bg_btn4"
            android:text="确定"></Button>

        <Button
            android:id="@+id/bt_cal4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/bt_true4"
            android:background="@drawable/bg_btn4"
            android:text="日历" />
    </LinearLayout>

    <EditText
        android:id="@+id/edittext5"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/edittext4"/>

    <TextView
        android:id="@+id/show_text5"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:gravity="center"
        android:hint="点击编辑打卡事项"
        android:layout_margin="5dp"
        android:background="@color/colordaka"
        android:layout_below="@+id/edittext4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_true2"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@+id/show_text5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_true5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/show_text5"
            android:background="@drawable/bg_btn4"
            android:text="确定"></Button>

        <Button
            android:id="@+id/bt_cal5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/bt_true5"
            android:background="@drawable/bg_btn4"
            android:text="日历" />
    </LinearLayout>
</RelativeLayout>